<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    tools:context=".PrjAlarmActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/logo" />

            <LinearLayout
                android:layout_width="338dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="33dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Alarm_btn"
                    android:layout_width="84dp"
                    android:layout_height="37dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/buttonshape"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:text="화재알림"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="84dp"
                    android:layout_height="37dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/buttonshape"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:text="충격알림"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/bluebtn"
                    android:layout_width="120dp"
                    android:layout_height="37dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/buttonshape"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:text="비인가 접근 알림"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />
            </LinearLayout>

            <TableLayout
                android:id="@+id/tableLayout2"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/shape_floor">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_room">

                    <TableLayout
                        android:id="@+id/tableLayout"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp">

                        <TableRow
                            android:layout_width="154dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="307dp"
                                android:layout_height="match_parent"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:text="화재 알림 설정"
                                android:textAlignment="center"
                                android:textColor="#da3f3a"
                                android:textSize="20dp"
                                android:textStyle="bold" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="1">


                            <Switch
                                android:id="@+id/switchSound"
                                android:layout_width="160dp"
                                android:layout_height="0dp"
                                android:text="소리" />
                        </TableRow>

                        <TableRow
                            android:layout_width="287dp"
                            android:layout_height="54dp"
                            android:layout_weight="1">

                            <Switch
                                android:id="@+id/switchVibe"
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:text="진동" />
                        </TableRow>

                    </TableLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_room">

                    <TableLayout
                        android:id="@+id/tableLayout3"
                        android:layout_width="319dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="307dp"
                                android:layout_height="match_parent"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:text="충격 알림 설정"
                                android:textAlignment="center"
                                android:textColor="#88563f"
                                android:textSize="20dp"
                                android:textStyle="bold" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="1">


                            <Switch
                                android:id="@+id/switchSound2"
                                android:layout_width="160dp"
                                android:layout_height="0dp"
                                android:text="소리" />
                        </TableRow>

                        <TableRow
                            android:layout_width="287dp"
                            android:layout_height="54dp"
                            android:layout_weight="1">

                            <Switch
                                android:id="@+id/switchVibe2"
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:text="진동" />
                        </TableRow>

                    </TableLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_room">

                    <TableLayout
                        android:id="@+id/tableLayout4"
                        android:layout_width="319dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="307dp"
                                android:layout_height="match_parent"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:text="비인가 접근 알림 설정"
                                android:textAlignment="center"
                                android:textColor="#2a365c"
                                android:textSize="20dp"
                                android:textStyle="bold" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="1">


                            <Switch
                                android:id="@+id/switchSound3"
                                android:layout_width="160dp"
                                android:layout_height="0dp"
                                android:text="소리" />
                        </TableRow>

                        <TableRow
                            android:layout_width="287dp"
                            android:layout_height="54dp"
                            android:layout_weight="1">

                            <Switch
                                android:id="@+id/switchVibe3"
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:text="진동" />
                        </TableRow>

                    </TableLayout>
                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="저장하기"/>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>