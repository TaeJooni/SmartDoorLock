<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/Logo"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="top"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/logo" />

        <EditText
            android:id="@+id/ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:width="250dp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="아이디"
            android:inputType="textMultiLine|textNoSuggestions"
            android:maxLength="15"
            android:padding="30px"
            android:textColorHighlight="@android:color/background_light"
            android:textColorLink="@android:color/background_dark"
            android:textCursorDrawable="@android:color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/PASS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="10dp"
            android:width="250dp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="비밀번호"
            android:inputType="textMultiLine|textPassword"
            android:maxLength="15"
            android:padding="30px"
            android:textColorHighlight="@android:color/background_dark"
            android:textColorLink="@android:color/background_dark"
            android:textCursorDrawable="@android:color/background_dark"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:buttonTint="#217ae9"
                android:id="@+id/Check_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:text="아이디저장"
                android:textColorHighlight="#656565"
                android:textColorLink="#656565"
                android:textCursorDrawable="@android:color/darker_gray"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/Save_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:buttonTint="#217ae9"
                android:text="로그인저장"
                android:textColorLink="#FFFFFF"
                android:textCursorDrawable="@android:color/background_light"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/find_id"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"
                android:text="아이디 찾기"
                android:textColor="#777676"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/find_pass"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="비밀번호 찾기"
                android:textColor="#777676"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/login_btn"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_blue_light"
            android:text="로그인"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/reg_btn"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@android:color/holo_blue_light"
            android:text="회원가입"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>